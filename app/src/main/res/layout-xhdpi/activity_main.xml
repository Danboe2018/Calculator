<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etShowValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right"
        android:inputType="textPersonName"
        android:paddingTop="10pt"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="40sp" />

    <TableLayout
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/butAC"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butClean"
                android:text="AC"
                android:textSize="18sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/butPlusMinus"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="+/-"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butPercent"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butPercent"
                android:text="%"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butDivide"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/butColot"
                android:onClick="butOpEvent"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/but7"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="7"
                android:textSize="18sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/but8"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="8"
                android:textSize="18sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/but9"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="9"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butMultiply"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/butColot"
                android:onClick="butOpEvent"
                android:text="X"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_marginBottom="1pt"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/but4"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="4"
                android:textSize="18sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/but5"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="5"
                android:textSize="18sp" />

            <Button
                android:layout_marginRight="1pt"
                android:id="@+id/but6"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butMinus"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/butColot"
                android:onClick="butOpEvent"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/but1"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="1"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but2"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="2"
                android:textSize="18sp" />

            <Button
                android:id="@+id/but3"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_marginRight="1pt"
                android:layout_weight="1"
                android:background="@color/whiteBack"
                android:onClick="butNumberEvent"
                android:text="3"
                android:textSize="18sp" />

            <Button
                android:id="@+id/butPlus"
                android:layout_width="60pt"
                android:layout_height="60pt"
                android:layout_weight="1"
                android:background="@color/butColot"
                android:onClick="butOpEvent"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/but0"
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:layout_weight="1"
            android:background="@color/whiteBack"
            android:onClick="butNumberEvent"
            android:text="0"
            android:textSize="18sp" />

        <Button
            android:layout_marginRight="1pt"
            android:id="@+id/butDot"
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:layout_weight="0"
            android:background="@color/whiteBack"
            android:onClick="butNumberEvent"
            android:text="."
            android:textSize="18sp" />

        <Button
            android:id="@+id/butEquals"
            android:layout_width="60pt"
            android:layout_height="60pt"
            android:layout_weight="0"
            android:background="@color/butColot"
            android:onClick="butEqualEvent"
            android:text="="
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>